{
    "name": "hapi-getting-started",
    "version": "0.0.2",
    "description": "User management, authentication and authorization api for Node.js using hapi",
    "main": "index.js",
    "scripts": {
        "setup": "node ./setup.js",
        "start": "node ./index.js",
        "test": "node ./node_modules/lab/bin/lab --coverage --reporter lcov --output ./test/artifacts/lcov.info",
        "coveralls": "cat ./test/artifacts/lcov.info | node ./node_modules/coveralls/bin/coveralls.js",
        "climate": "cat ./test/artifacts/lcov.info | node ./node_modules/codeclimate-test-reporter/bin/codeclimate.js",
        "test-with-report": "node ./node_modules/lab/bin/lab --coverage --reporter html --output ./test/artifacts/coverage.html",
        "test-console": "node ./node_modules/lab/bin/lab --coverage --reporter console",
        "jshint": "node ./node_modules/jshint/bin/jshint --config .jshintrc --verbose --reporter unix *.js ./server/**/*.js ./test/**/*.js"
    },
    "keywords": [
        "hapijs",
        "getting started",
        "user authentication",
        "user authorization",
        "permissions",
        "user groups"
    ],
    "repository": {
        "type": "git",
        "url": "git@github.com:k-sheth/hapi-getting-started.git"
    },
    "author": {
        "name": "Kumarpal Sheth",
        "email": "k.sheth@gmail.com"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/k-sheth/hapi-getting-started/issues"
    },
    "homepage": "https://github.com/k-sheth/hapi-getting-started",
    "engines": {
        "node": ">= 0.10.x"
    },
    "dependencies": {
        "bcrypt": "^0.8.1",
        "bluebird": "^2.9.3",
        "boom": "^2.6.1",
        "bossy": "^1.0.2",
        "glue": "^2.0.0",
        "good": "^5.1.1",
        "good-console": "^4.1.0",
        "good-file": "^4.0.2",
        "handlebars": "^2.0.0",
        "hapi": "^8.1.0",
        "hapi-auth-basic": "^2.0.0",
        "hapi-mongo-models": "^1.0.7",
        "hoek": "^2.11.0",
        "joi": "^5.1.0",
        "lodash": "^3.0.0",
        "mongodb": "^1.4.29",
        "node-uuid": "^1.4.2",
        "nodemailer": "^1.3.0",
        "nodemailer-markdown": "^1.0.0",
        "object-assign": "^2.0.0"
    },
    "devDependencies": {
        "chai": "^1.10.0",
        "code": "^1.3.0",
        "codeclimate-test-reporter": "^0.0.4",
        "coveralls": "^2.11.2",
        "jshint": "^2.6.0",
        "lab": "^5.2.1",
        "mocha": "^2.1.0",
        "promptly": "^0.2.0"
    }
}
