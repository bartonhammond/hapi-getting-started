'use strict';
import {flatten} from 'lodash';
import {buildRESTRoutes, buildRoute} from './../common/routes';
import Controller from './controller';
let routes = flatten([
    buildRESTRoutes('users', Controller),
    buildRoute('POST', '/signup', Controller.signup, false),
    buildRoute('POST', '/login/forgot', Controller.loginForgot, false),
    buildRoute('POST', '/login/reset', Controller.loginReset, false)
]);
export default routes;
